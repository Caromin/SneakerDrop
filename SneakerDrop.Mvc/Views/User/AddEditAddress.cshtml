@model SneakerDrop.Mvc.Models.AddressViewModel

<partial name="../Partials/GeneralHeader.cshtml" />

@using (@Html.BeginForm("AddEditInfo", "Home"))
{
    <div class="w-100">
        <div class="mt-5 text-center align-content-center">
            <h4 class="mb-2">SneakerDrop</h4>
            <div id="loginDiv" class="text-left p-3 box-shadow">
                <div>
                    

                    <div class="d-block">
                        @Html.LabelFor(u => u.Street, "Street", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.Street, @Model.Street, new { @required = "required", placeholder = "123 Main Street", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.Street)
                    </div>
                </div>
                <div>
                    <div class="d-block">
                        @Html.LabelFor(u => u.City, "City", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.City, @Model.City, new { @required = "required", placeholder = "Tampa", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.City)
                    </div>
                </div>
                <div>
                    <div class="d-block">
                        @Html.LabelFor(u => u.State, "State", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.State,@Model.State ,new { @required = "required", placeholder = "Fl", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.State)
                    </div>
                </div>
                <div>
                    <div class="d-block">
                        @Html.LabelFor(u => u.PostalCode, "ZipCode", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.PostalCode,@Model.PostalCode, new { @required = "required", placeholder = "33263", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.PostalCode)
                    </div>
                    <small class="d-inline text-danger">@ViewBag.Message</small>
                </div>
                <div class="mt-3 text-center">
                    <div>
                        <button class="w-100 btn btn-warning btnText" type="submit">Add Address</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

