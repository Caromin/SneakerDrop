@model SneakerDrop.Mvc.Models.PaymentViewModel

<partial name="../Partials/GeneralHeader.cshtml" />
@using (@Html.BeginForm("CompletePayment", "Home"))
{
    <div class="w-100">
        <div class="mt-5 text-center align-content-center">
            <h4 class="mb-2">SneakerDrop</h4>
            <div id="loginDiv" class="text-left p-3 box-shadow">
                <div>
                    <div class="d-block">
                        @Html.LabelFor(u => u.CCNumber, "Card Number", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.CCNumber, new { @required = "required", placeholder = "7273456788920301", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.CCNumber)
                    </div>
                </div>
                <div>
                    <div class="d-block">
                        @Html.LabelFor(u => u.CCUserName, "Name", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.CCUserName, new { @required = "required", placeholder = "Bart J. Simpson", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.CCUserName)
                    </div>
                </div>
                <div>
                    <div class="d-block">
                        @Html.LabelFor(u => u.Month, "Month", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.Month, new { @required = "required", placeholder = "02", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.Month)
                    </div>
                </div>
                <div>
                    <div class="d-block">
                        @Html.LabelFor(u => u.Year, "Year", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.Year, new { @required = "required", placeholder = "2022", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.Year)
                    </div>
                </div>
                <div>
                    <div class="d-block">
                        @Html.LabelFor(u => u.CVV, "CVV", new { @class = "btnText" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.CVV, new { @required = "required", placeholder = "702", @class = "w-100 form-control" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(u => u.CVV)
                    </div>
                    <small class="d-inline text-danger">@ViewBag.Message</small>
                </div>
                <div class="mt-3 text-center">
                    <div>
                        <button class="w-100 btn btn-success btnText" type="submit">Add Payment</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}