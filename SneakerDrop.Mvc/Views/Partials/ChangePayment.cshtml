@model List<SneakerDrop.Mvc.Models.PaymentViewModel>

<partial name="./GeneralHeader.cshtml" />

@using (@Html.BeginForm("AddPayment", "Home"))
{
    <div class="container  mb-5">
        <h4 class="mt-4">Your Payments</h4>
        <button name="payment" class="w-25 btn btn-primary d-inline" type="submit" value="add">Add New Payment</button>
    </div>
    <div class="d-flex flex-wrap container pb-4">

        @foreach (var item in Model)
        {
            <div class="boxDiv m-1 d-inline-block box-shadow pt-3">
                <div class="container">
                    <p>@item.CCNumber</p>
                    <p>@item.CCUserName</p>
                    <p>@item.Month/@item.Year</p>
                    <p>@item.CVV</p>
                </div>
                <div class="pl-2">
                    <button name="payment" class="btn-danger rounded" type="submit" value="delete-@item.PaymentId">Delete</button>
                </div>
            </div>
        }

    </div>
}