@model List<SneakerDrop.Mvc.Models.FindProductInfoViewModel>

<partial name="../Partials/GeneralHeader.cshtml" />
<div class="container text-center pt-5">
    <div class="search d-inline">
        @using (@Html.BeginForm("buyer", "Store"))
        {
            @Html.TextBoxFor(u => u[0].ProductTitle, "Search", new { @required = "required", @class = "pl-2 searchbar" })
            @Html.ValidationMessageFor(u => u[0].ProductTitle)
            <button type="submit">Search</button>
        }
    </div>
</div>
